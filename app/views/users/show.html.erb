<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize: "150x150"), class: "img-thumbnail" %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: "img-thumbnail", alt: "Default Avatar" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_registration_path(current_user) %>">
            <i class="fas fa-user-cog" aria-hidden="true"></i>
          </a>
        </div>
      </div>
      
      <div class="col-md-9">
        <h2 class="mt-3">New book</h2>
        <%= form_with model: current_user.books.build, url: books_path do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>