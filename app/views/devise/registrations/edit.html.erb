<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with(model: @user, url: user_path(@user), local: true, method: :patch, multipart: true) do |form| %>
          <div class="form-group" style="margin: 10px 0;">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control", style: "margin: 10px 0; width: 100%;"  %>
          </div>
          
          <div class="form-group" style="margin: 10px 10px 10px 0;">
            <%= form.label :avatar, "Image", style: "margin-bottom: 10px";%>
            <%= form.file_field :avatar, accept: "image/*", class: "form-control-file" %>
          </div>
          
          <div class="form-group">
            <%= form.label :introduction, style: "margin-bottom: 10px;" %>
            <%= form.text_area :introduction, class: "form-control", style: "margin-bottom: 10px; width: 100%;" %>
          </div>
          
          <div class="form-group">
            <%= form.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>